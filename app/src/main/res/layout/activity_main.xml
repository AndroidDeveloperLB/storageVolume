<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="check LogCat for results of each operation" />

    <Button
        android:id="@+id/checkAccessButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="checkAccess" />

    <Button
        android:id="@+id/requestAccessButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="requestAccessToStorageVolume" />

</LinearLayout>
